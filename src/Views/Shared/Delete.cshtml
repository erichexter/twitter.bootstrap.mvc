@using BootstrapSupport
@model Object
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Model.GetLabel() <small>Details</small></legend>
        <dl>
            <!-- use this class on the dl if you want horizontal styling http://twitter.github.com/bootstrap/base-css.html#typography  class="dl-horizontal"-->
            @foreach (var property in Model.VisibleProperties())
            {
                <dt>
                    @property.GetLabel().ToSeparatedWords()
                </dt>
                <dd>
                    @Html.Display(property.Name)
                </dd>
            }
        </dl>
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn" })
        </div>
    </fieldset>
}